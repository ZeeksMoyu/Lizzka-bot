generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Client {
  id       Int      @id @default(autoincrement())
  name     String
  phone    String
  language String   @default("pl")
  service  String
  date     DateTime @default(now())
}

model Content {
  id       Int      @id @default(autoincrement())
  service  String
  language String
  type     String
  data     String
}